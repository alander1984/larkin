<%= form_for(client, :html => {:class => 'form-horizontal', :style => 'margin-top:15px'}) do |f| %>
   <div class="form-group row">
    <label for="inputClientName" class="col-sm-4 form-control-label">Client name</label>
    <div class="col-sm-8">
    	<%= f.text_field :name, :class => "form-control", :placeholder => "Client name" %>	
    </div>
  </div>
  <div class="form-group row">
    <label for="inputPassword3" class="col-sm-4 form-control-label">Phone</label>
    <div class="col-sm-8">
    	<%= f.text_field :phone, :class => "form-control", :placeholder => "Contact phone" %>	
    </div>
  </div>
<% end %>    